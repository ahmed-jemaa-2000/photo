            "target": "plugin::users-permissions.user"
        },
        "balance": {
            "type": "integer",
            "default": 10,
            "min": 0,
            "required": true
        },
        "totalPurchased": {
            "type": "integer",
            "default": 10,
            "min": 0
        },
        "totalUsed": {
            "type": "integer",
            "default": 0,
            "min": 0
        }
    }
}