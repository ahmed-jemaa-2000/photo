{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "customerName": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 100
    },
    "customerPhone": {
      "type": "string",
      "required": true,
      "regex": "^[+]?[0-9]{8,15}$"
    },
    "customerAddress": {
      "type": "text"
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "order.order-item",
      "required": true,
      "min": 1
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "shipped",
        "delivered",
        "completed",
        "cancelled"
      ],
      "default": "pending"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "cod",
        "bank_transfer",
        "other"
      ],
      "default": "cod"
    },
    "notes": {
      "type": "text"
    },
    "shop": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shop.shop",
      "inversedBy": "orders",
      "required": true
    }
  }
}