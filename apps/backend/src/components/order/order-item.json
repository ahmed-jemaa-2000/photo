{
  "collectionName": "components_order_order_items",
  "info": {
    "displayName": "Order Item",
    "icon": "shopping-cart",
    "description": "Individual item in an order"
  },
  "options": {},
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product.product"
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "unitPrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "totalPrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "size": {
      "type": "string"
    },
    "color": {
      "type": "string"
    }
  }
}
